    "version": "0.2.0",
    "configurations": [
        {
            "name": "Watch (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/fts_pdbsrc.exe",
            "args": [
                "watch"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
        },
        {
            "name": "Extract One (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/fts_pdbsrc.exe",
            "args": [
                "extract_one",
                "--file",
                "foo",
                "--outdir",
                "bar",
                "--pdb",
                "baz"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
        },
        {
            "name": "Embed (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/fts_pdbsrc.exe",
            "args": [
                "embed",
                "--pdb",
                "c:/temp/pdb/CrashTest.pdb",
                "--roots",
                "c:/temp/cpp"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
        },
    ]
}